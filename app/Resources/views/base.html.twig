<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}SnowTrix !{% endblock %}</title>
        {% block stylesheets %}{% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
        <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.3.1/css/all.css" integrity="sha384-mzrmE5qonljUremFsqc01SB46JvROS7bZs3IO2EmfFsd15uHvIt+Y8vEf7N7fWAU" crossorigin="anonymous">
    </head>
    <body>
        {% include 'snowtrix/menu.html.twig' %}

        {% for message in app.flashes('actionInfoError') %}
            <div class="flash-notice flash-notice-error">
                {{ message | raw }}
            </div>
        {% endfor %}

        {% for message in app.flashes('actionInfoSuccess') %}
            <div class="flash-notice flash-notice-success">
                {{ message | raw }}
            </div>
        {% endfor %}


        {% block body %}{% endblock %}
        {% block javascripts %}{% endblock %}
    </body>
</html>
